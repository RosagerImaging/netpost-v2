# NetPost V2 Environment Variables Template
# Copy this file to .env.local and fill in your values

# =================================
# NEXT.JS CONFIGURATION
# =================================
NEXT_PUBLIC_APP_NAME="NetPost V2"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =================================
# DATABASE CONFIGURATION
# =================================
# Supabase Database URL
DATABASE_URL="postgresql://postgres:password@localhost:54322/postgres"
DIRECT_URL="postgresql://postgres:password@localhost:54322/postgres"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =================================
# AUTHENTICATION
# =================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =================================
# AI/ML SERVICES
# =================================
# OpenAI API
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORGANIZATION="your-openai-org-id"

# =================================
# EXTERNAL PLATFORM APIS
# =================================
# Poshmark API (when available)
POSHMARK_API_KEY="your-poshmark-api-key"
POSHMARK_API_SECRET="your-poshmark-api-secret"

# Mercari API (when available)
MERCARI_API_KEY="your-mercari-api-key"

# eBay API
EBAY_CLIENT_ID="your-ebay-client-id"
EBAY_CLIENT_SECRET="your-ebay-client-secret"

# =================================
# FILE STORAGE
# =================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="netpost-v2-uploads"

# Alternatively, use Supabase Storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET="uploads"

# =================================
# EMAIL SERVICES
# =================================
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@netpost.com"

# =================================
# ANALYTICS & MONITORING
# =================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS="true"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry Error Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =================================
# FEATURE FLAGS
# =================================
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_CROSS_POSTING="false"
NEXT_PUBLIC_ENABLE_MOBILE_APP="false"

# =================================
# DEVELOPMENT SETTINGS
# =================================
NODE_ENV="development"
LOG_LEVEL="debug"
ENABLE_MOCK_DATA="true"

# =================================
# SECURITY
# =================================
# Rate limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# CORS settings
CORS_ORIGIN="http://localhost:3000"