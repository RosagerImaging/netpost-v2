{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "turbo build --filter=web",
  "installCommand": "npm install --include=dev --legacy-peer-deps",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- apps/web/src vercel.json package.json || exit 1",
  "env": {
    "TURBO_TELEMETRY_DISABLED": "1",
    "TURBO_TEAM": "team_netpost",
    "TURBO_TOKEN": "",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_ENV": "production",
    "FORCE_DYNAMIC": "1",
    "DISABLE_STATIC_GENERATION": "1"
  },
  "build": {
    "env": {
      "TURBO_TELEMETRY_DISABLED": "1",
      "TURBO_TEAM": "team_netpost",
      "TURBO_TOKEN": "",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_ENV": "production",
      "SKIP_VALIDATION": "1",
      "FORCE_COLOR": "1",
      "FORCE_DYNAMIC": "1",
      "DISABLE_STATIC_GENERATION": "1",
      "NEXT_DISABLE_STATIC_GENERATION": "1",
      "SKIP_STATIC_GENERATION": "1"
    }
  },
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "apps/web/.next/server/app/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        },
        {
          "key": "X-Deployment-Type",
          "value": "dynamic-only"
        }
      ]
    }
  ],
  "crons": []
}