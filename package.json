{
  "name": "netpost-v2",
  "version": "1.0.0",
  "description": "AI-Native Reselling Assistant Platform",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "mobile:dev": "npm run dev --workspace=mobile",
    "mobile:android": "npm run android --workspace=mobile",
    "mobile:ios": "npm run ios --workspace=mobile",

    "test:coverage": "turbo test -- --coverage",
    "test:run": "turbo test -- --run",
    "test:integration": "turbo test:integration",

    "validate:quick": "npm run type-check && npm run lint && npm run test:run",
    "validate:enhanced": "node scripts/enhanced-pre-deploy-validation.cjs",
    "validate:enhanced:verbose": "node scripts/enhanced-pre-deploy-validation.cjs --verbose",
    "validate:enhanced:skip-security": "node scripts/enhanced-pre-deploy-validation.cjs --skip-security",

    "deploy:preview": "npm run validate:enhanced && vercel",
    "deploy:prod": "npm run validate:enhanced && vercel --prod",
    "deploy:emergency": "npm run validate:quick && vercel --prod --force",

    "security:check": "npm run lint -- --config .eslintrc.security.js",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:audit": "npm audit --audit-level moderate"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "artillery": "^2.0.25",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "jest-environment-node": "^30.1.2",
    "playwright": "^1.55.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shadcn": "^3.3.1",
    "supertest": "^7.1.4",
    "turbo": "^1.12.4"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15"
  }
}
